<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/mdh34/quickdocs/"
  id="com.github.mdh34.quickdocs"
  gettext-domain="com.github.mdh34.quickdocs">
    <key name="dark" type="i">
      <default>0</default>
      <summary>Dark Mode</summary>
      <description>Sets dark mode status</description>
    </key>
    <key name="tab" type="s">
      <default>"vala"</default>
      <summary>Last opened tab</summary>
      <description>Saves the last opened tab</description>
    </key>
    <key name="first" type="i">
      <default>0</default>
      <summary>First run</summary>
      <description>Sets if the application has been initialised yet</description>
    </key>
    <key name="window-x" type="i">
      <default>-1</default>
      <summary>Window X position</summary>
      <description>Stores the window's last X position</description>
    </key>
    <key name="window-y" type="i">
      <default>-1</default>
      <summary>Window Y position</summary>
      <description>Stores the window's last Y position</description>
    </key>
    <key name="width" type="i">
      <default>1000</default>
      <summary>Window width</summary>
      <description>Stores the windows last width</description>
    </key>
    <key name="height" type="i">
      <default>1000</default>
      <summary>Window height</summary>
      <description>Stores the windows last height</description>
    </key>
    <key name="last-vala" type="s">
      <default>"https://valadoc.org"</default>
      <summary>Last visited valadoc page</summary>
      <description>Stores the address of the last visisted valadoc page</description>
    </key>
    <key name="last-dev" type="s">
      <default>"https://devdocs.io"</default>
      <summary>Last visited devdocs page</summary>
      <description>Stores the address of the last visisted devdocs page</description>
    </key>
    <key name="packages" type="as">
      <default>[]</default>
      <summary>Downloaded packages</summary>
      <description>Stores a list of offline downloaded packages</description>
    </key>
  </schema>
</schemalist>
